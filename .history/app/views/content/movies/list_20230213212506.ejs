<div class="container">
    <h1><%=title %></h1>
    <a href="/movie-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Movie
    </a>
    <div class="row">
        <div class="column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Year</th>
                        <th scope="col">Director</th>
                        <th scope="col">Genre</th>
                        <th scope="col">Runtime</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="movieList">
                    <% for(let count=0; count < movies.length; count++) { %>                   
                        <tr>
                            <td scope="row" class="text-center"></td>
                            <td><%= movies[count].name %></td>
                            <td><%= movies[count].year %></td>
                            <td><%= movies[count].director %></td>
                            <td><%= movies[count].genre %></td>
                            <td><%= movies[count].runtime %></td>
                            <td class="text-center col-1">
                                <a class="btn btn-primary" href="/movie-edit/<%= movies[count].id %>">
                                    Edit
                                </a>
                            </td>
                            <td class="text-center col-1">
                                <a class="btn btn-warning" href="/movie-delete/<%= movies[count].id %>">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>